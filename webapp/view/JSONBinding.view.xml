<mvc:View controllerName="sapips.training.jsonbindingscratch.controller.JSONBinding"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel0" class="sapUiResponsiveMargin" headerText="Data Binding Basics">
            <headerToolbar>
                <Toolbar id="toolbar1">
                    <Title text="Data Binding Basics"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://settings"/>
                </Toolbar>
            </headerToolbar>
            <content>
            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
                <sap.ui.layout.form:content>
                    <Label text="EID" id="eidLbl"/>
                    <Input width="100%" id="eidInput" valueLiveUpdate="true" enabled="{/Enabled}" value="{/Eid}"/>
                    <Label text="Enabled" id="enabledLbl"/>
                    <CheckBox xmlns="sap.m" selected="{/Enabled}" id="enabledCBox"/></sap.ui.layout.form:content>
            </sap.ui.layout.form:SimpleForm>
            </content>
        </Panel>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel1" class="sapUiResponsiveMargin" headerText="Address Details">
            <headerToolbar>
                <Toolbar id="toolbar2">
                    <Title text="Address Details"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://settings"/>
                    </Toolbar>
                
            </headerToolbar>
            <content>

            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="sFormEmployeeDetails">
                <sap.ui.layout.form:content>
                    <Label text="Address" id="addressLbl"/>
                    <Text width="100%" id="addresstxt" class="sapUiSmallMarginBottom" text="{/Address/Street} {/Address/Zip} {/Address/City} {/Address/Country}"/>
                    <Link id="emailLnk" href="{path: '/Eid', formatter:'.formatter.formatMail'}" text="Send Email"/>
                    <Label text="Sale Amount" id="salesAmntLbl" class="sapUiSmallMarginBegin"/>
                    <Input width="100%" id="salesAmntInput" class="sapUiSmallMarginBottom" description="{/CurrencyCode}" enabled="true" value="{ parts: [ {path: '/SalesAmount'}, {path: '/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"/>
                </sap.ui.layout.form:content>
            </sap.ui.layout.form:SimpleForm>
            </content>
        </Panel>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel2" class="sapUiResponsiveMargin" headerText="Aggregation Binding">
            <headerToolbar> 
                <Toolbar id="toolbar1_1740977976890">
                    <Title text="Aggregation Binding"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://settings"/>
                    </Toolbar>
            </headerToolbar>
            <content>
                <List noDataText="Drop list items here" id="list0" items="{oProductDetailListModel>/Products}" mode="SingleSelectMaster" itemPress="onSelectProduct">
                    <items>
                        <ObjectListItem 
                        type="Active"
                        title="{oProductDetailListModel>ProductName}"
                        number="{
                            parts: [{path: 'oProductDetailListModel>UnitPrice'}, {path: '/CurrencyCode'} ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: { showMeasure: false} }"
                        numberUnit="{/CurrencyCode}"
                        id="listItem1">
                            <attributes>
                                <ObjectAttribute title="{i18n>stockOnHand}" text="{oProductDetailListModel>QuantityPerUnit}" id="attribute0"/>
                            </attributes>
                            <attributes>
                                <ObjectAttribute id="attribute2" title="{i18n>objAtriTitle}" text="{ parts: [ {path:'oProductDetailListModel>UnitPrice'}, {path:'oProductDetailListModel>UnitsInStock'}, {path:'/CurrencyCode'} ], formatter:'.formatter.formatStockValue'}"/>
                            </attributes>                       
                        </ObjectListItem>
                    </items>
                </List>
            </content>
        </Panel>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel3" headerText="Product Details" class="sapUiResponsiveMargin">
            <headerToolbar>
                <Toolbar id="toolbar1_1740989108246">
                    <Title text="Product Details"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://settings"/>
                    </Toolbar>
                
            </headerToolbar>
            <content> 
            <sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" id="sFormProductDetails"> 
                <sap.ui.layout.form:content> 
                    <Label text="Product ID" id="prodIdLbl"/> 
                    <Input width="100%" id="productIdInput" value="{oProductDetailListModel>ProductId}"/>  
                    <Label text="Product Name" id="prodNameLbl"/> 
                    <Input width="100%" id="prodNameInput" value="{oProductDetailListModel>ProductName}"/>
                    <Label text="Supplier ID" id="supIdLbl"/> 
                    <Input width="100%" id="supIdInput" value="{oProductDetailListModel>SupplierId}"/> 
                    <Label text="Category ID" id="catIdLbl"/> 
                    <Input width="100%" id="catIdInput" value="{oProductDetailListModel>CategoryId}"/> 
                    <Label text="Quantity Per Unit" id="quantPerUnitLbl"/> 
                    <Input width="100%" id="quantPerUnitInput" value="{oProductDetailListModel>QuantityPerUnit}"/>  
                    <Label text="Unit Price" id="unitPrcLbl"/> 
                    <Input width="100%" id="unitPrcInput" value="{oProductDetailListModel>UnitPrice}"/>
                    <Label text="Unit in Stock" id="unitInStockLbl"/> 
                    <Input width="100%" id="unitInStockInput" value="{oProductDetailListModel>UnitsInStock}"/>
                    <Label text="Unit in Stock" id="unitOnOrderLbl"/> 
                    <Input width="100%" id="unitOnOrdeInput" value="{oProductDetailListModel>UnitOnOrder}"/>  
                    <Label text="Unit in Stock" id="reorderLevelLbl"/> 
                    <Input width="100%" id="reorderLeveInput" value="{oProductDetailListModel>ReorderLevel}"/> 
                    <Label text="Discontinued" id="discontLbl"/> 
                    <Input width="100%" id="discontInput" value="{oProductDetailListModel>Discontinued}"/>
                </sap.ui.layout.form:content> 
            </sap.ui.layout.form:SimpleForm> 
            </content>
            </Panel>
    </content>
    </Page>
</mvc:View>